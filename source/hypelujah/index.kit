<!doctype html>
<html class="no-js" lang="">
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Hypelujah</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="styles/main.css">
</head>
<body>
  <div class="main">

    <header class="header">
        <h1 class="uni-headline--2 js-step-title">Choose a Highlight Package</h1>
    </header>

    <div class="steps">

      <section class="step step--active">
        <ul class="card-list">
          <li class="card js-choose-package">
            <figure class="card__image" style="background-image: url(img/bg-package/nba-jam.jpg)"></figure>
            <div class="card__info">
              <h3 class="card__title">NBA Jam</h3>
            </div>
          </li>
          <li class="card js-choose-package">
            <figure class="card__image" style="background-image: url(img/bg-package/friday-night-lights.jpg)"></figure>
            <div class="card__info">
              <h3 class="card__title">Friday Night Lights</h3>
            </div>
          </li>
          <li class="card js-choose-package">
            <figure class="card__image" style="background-image: url(img/bg-package/recruitment.jpg)"></figure>
            <div class="card__info">
              <h3 class="card__title">Recruitment Showcase</h3>
            </div>
          </li>
          <li class="card js-choose-package">
            <figure class="card__image" style="background-image: url(img/bg-package/bball.jpg)"></figure>
            <div class="card__info">
              <h3 class="card__title">End of Season Banquet</h3>
            </div>
          </li>
          <li class="card js-choose-package">
            <figure class="card__image" style="background-image: url(img/bg-package/vball.jpg)"></figure>
            <div class="card__info">
              <h3 class="card__title">Build Your Own</h3>
            </div>
          </li>
        </ul>
      </section>

      <section class="step step--inactive">

        <header class="step-header">
          <ul class="tabs">
            <li class="tabs__tab tabs__tab--selected">You</li>
            <li class="tabs__tab">Your Team</li>
            <li class="tabs__tab">The World</li>
          </ul>
          <div class="filters">
            <div class="uni-form__control uni-margin--one--right">
              <input type="text" class="uni-form__input" id="text1" aria-describedby="text1Help" placeholder="Search for Videos...">
            </div>
            <div class="uni-form__control--select">
              <select class="uni-form__select" aria-label="What is your favorite TV Show?">
                <option class="uni-form__option">Most Relevant</option>
                <option class="uni-form__option">Most Recent</option>
                <option class="uni-form__option">Parks and Rec</option>
              </select>
            </div>
          </div>
        </header>

        <section>
          <h2 class="uni-headline--2 uni-margin--two--btm">Recommended</h2>
          <ul class="card-list">
            <li class="card card--is-selectable">
              <figure class="card__check"><!-- @import 'img/icon/check.svg' --></figure>
              <figure class="card__image" style="background-image: url(img/bg-thumbs-bball/1.jpg)"></figure>
              <div class="card__info">
                <h3 class="card__title">Dunk on Williams</h3>
                <h4 class="card__subtitle">2017 02 20 • vs Southeast</h4>
              </div>
            </li>
            <li class="card card--is-selectable">
              <figure class="card__check"><!-- @import 'img/icon/check.svg' --></figure>
              <figure class="card__image" style="background-image: url(img/bg-thumbs-bball/2.jpg)"></figure>
              <div class="card__info">
                <h3 class="card__title">OMG SICK Three to Win the Game</h3>
                <h4 class="card__subtitle">2017 02 12 • vs Lincoln High</h4>
              </div>
            </li>
            <li class="card card--is-selectable">
              <figure class="card__check"><!-- @import 'img/icon/check.svg' --></figure>
              <figure class="card__image" style="background-image: url(img/bg-thumbs-bball/3.jpg)"></figure>
              <div class="card__info">
                <h3 class="card__title">Crazy Crazy Crazy You Guys</h3>
                <h4 class="card__subtitle">2017 02 20 • vs Grand Island Northwest</h4>
              </div>
            </li>
            <li class="card card--is-selectable">
              <figure class="card__check"><!-- @import 'img/icon/check.svg' --></figure>
              <figure class="card__image" style="background-image: url(img/bg-thumbs-bball/4.jpg)"></figure>
              <div class="card__info">
                <h3 class="card__title">Bleep bleep blorp</h3>
                <h4 class="card__subtitle">2017 02 20 • AHS vs SWS</h4>
              </div>
            </li>
          </ul>
        </section>

        <section>
          <h2 class="uni-headline--2 uni-margin--one--btm">Dunks</h2>
          <ul class="card-list">
            <li class="card card--is-selectable">
              <figure class="card__check"><!-- @import 'img/icon/check.svg' --></figure>
              <figure class="card__image" style="background-image: url(img/bg-thumbs-bball/4.jpg)"></figure>
              <div class="card__info">
                <h3 class="card__title">Dunk on Williams</h3>
                <h4 class="card__subtitle">2017 02 20 • vs Southeast</h4>
              </div>
            </li>
            <li class="card card--is-selectable">
              <figure class="card__check"><!-- @import 'img/icon/check.svg' --></figure>
              <figure class="card__image" style="background-image: url(img/bg-thumbs-bball/5.jpg)"></figure>
              <div class="card__info">
                <h3 class="card__title">OMG SICK Three to Win the Game</h3>
                <h4 class="card__subtitle">2017 02 12 • vs Lincoln High</h4>
              </div>
            </li>
            <li class="card card--is-selectable">
              <figure class="card__check"><!-- @import 'img/icon/check.svg' --></figure>
              <figure class="card__image" style="background-image: url(img/bg-thumbs-bball/6.jpg)"></figure>
              <div class="card__info">
                <h3 class="card__title">Dunk vs. Southeast</h3>
                <h4 class="card__subtitle">2017 02 20 • AHS vs SWS</h4>
              </div>
            </li>
            <li class="card card--is-selectable">
              <figure class="card__check"><!-- @import 'img/icon/check.svg' --></figure>
              <figure class="card__image" style="background-image: url(img/bg-thumbs-bball/7.jpg)"></figure>
              <div class="card__info">
                <h3 class="card__title">Dunk vs. Southeast</h3>
                <h4 class="card__subtitle">2017 02 20 • AHS vs SWS</h4>
              </div>
            </li>
          </ul>
        </section>

      </section>

    </div>

  </div>

  <script src="script.js"></script>

</body>
</html>
