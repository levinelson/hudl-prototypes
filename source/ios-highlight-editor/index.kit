<!DOCTYPE html>
<html>
  <head>
    <title>Gatorade Lower Third</title>
    <link href="main.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width">
    <meta name="apple-mobile-web-app-capable" content="yes">
  </head>
<body>
  <div class="editor-container initial" id="demo-simple-slider">
    <div class="hotspot"></div>
    <div class="editor-container-inner">
      <nav class="editor-navbar">
        <span id="cancel">Cancel</span>
        <span id="done">Done</span>
      </nav>
      <div class="editor-main">
        <div class="editor-video-and-timeline">
          <div class="video-container bottom-left">
            <video src="clip.mp4" autoplay loop="true" playsinline></video>
            <main class="video-lower-third">
              <figure class="logo">
                <img src="gatorade.png" alt="Gatorade Logo">
              </figure>
              <figure class="divider"></figure>
              <div class="content">
                <textarea id="lower-third-content" placeholder="Tap to Edit" rows="1"></textarea>
              </div>
            </main>
          </div>
          <div class="editor-timeline">
            <div class="editor-trimmer _is-inactive">
              <!-- @import 'img/icon/text.svg' -->
              <figure class="playhead"></figure>
              <figure class="trim-handle-left"></figure>
              <figure class="trim-handle-right"></figure>
            </div>
            <div id="spot-shadow-indication" class="editor-shadow-indication">
              <figure><!-- @import 'img/icon/spot-shadow.svg' --></figure>
            </div>
            <div id="text-indication" class="editor-duration-indication _is-inactive" style="top: 16px; left: 2px">
              <!-- @import 'img/icon/text.svg' -->
            </div>
            <div id="slowmo-indication" class="editor-duration-indication" style="top: 38px; left: 20%; width: 20%">
              <!-- @import 'img/icon/slowmo.svg' -->
            </div>
            <figure class="tick"></figure>
            <figure class="tick"></figure>
            <figure class="tick"></figure>
            <figure class="tick"></figure>
          </div>
        </div>
        <ul class="editor-fx-tray-2 _is-inactive">
          <li id="set-overlay-bottom-left" class="_is-active"><!-- @import 'img/icon/overlay-bottom-left.svg' --></li>
          <li id="set-overlay-bottom-right"><!-- @import 'img/icon/overlay-bottom-right.svg' --></li>
          <li id="set-overlay-top-left"><!-- @import 'img/icon/overlay-top-left.svg' --></li>
          <li id="set-overlay-remove"><!-- @import 'img/icon/remove.svg' --></li>
        </ul>
        <ul class="editor-fx-tray-1">
          <li id="add-trim"><!-- @import 'img/icon/trim.svg' --></li>
          <li id="add-spot"><!-- @import 'img/icon/spot-shadow.svg' --></li>
          <li id="add-slowmo"><!-- @import 'img/icon/slowmo.svg' --></li>
          <li id="add-text"><!-- @import 'img/icon/text.svg' --></li>
        </ul>
      </div>
    </div>

  </div>

  <script src="script.js"></script>
</body>

</html>
