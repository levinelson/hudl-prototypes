<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Toast</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="styles/main.css">
    </head>
    <body>
      <div class="container _desktop-de-1">
        <div class="toast t-le--clean toast--type-success">
          <div class="toast__icon">
            <!-- @import "img/confirmation.svg" -->
          </div>
          <div class="toast__message">
            <p class="uni-text uni-text--set-solid">Clip added to <a href="#" class="toast__link">vs. Southwest</a> game reel.</p>
            <div class="toast__message__buttons uni-btn__row">
              <button class="uni-btn--subtle uni-btn--small">Share Now</button>
              <button class="uni-btn--subtle uni-btn--small">Go to Highlights</button>
            </div>
          </div>
          <div class="toast__clear js-toggle-toast">
            <button class="uni-btn--secondary--minimal uni-btn--small"><!-- @import "img/close.svg" --></button>

          </div>

        </div>
        <div class="trigger-container">
          <div class="uni-btn--primary uni-btn--small js-toggle-toast">Trigger</div>
          <div class="uni-btn--primary uni-btn--small js-toggle-bg">BG</div>
          <div class="uni-btn--primary uni-btn--small js-toggle-environment">Theme</div>
          <div class="uni-btn--primary uni-btn--small js-toggle-type">Type</div>
          <div class="uni-btn--primary uni-btn--small js-toggle-btns">Btns</div>
          <div class="uni-btn--primary uni-btn--small js-toggle-icon">Icon</div>
        </div>

      </div>
      <script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
      <script src="script-min.js"></script>
    </body>
</html>
